<AnchorPane fx:id="bgImg" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #ffffff;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tubes11.apotekerreal.controller.CheckDrugController">
   <children>
      <ImageView fx:id="bgImgView" fitHeight="400.0" fitWidth="600.0" pickOnBounds="true" smooth="false">
         <image>
            <Image url="@../img/img_try.jpeg" />
         </image>
      </ImageView>
      <Label layoutX="253.0" layoutY="26.0" text="Drug's Data">
         <font>
            <Font name="System Bold" size="21.0" />
         </font>
         <textFill>
            <LinearGradient endX="1.0" endY="1.0" startX="1.0" startY="0.24290218413440212">
               <stops>
                  <Stop>
                     <color>
                        <Color green="1.0" blue="0.8039215803146362" />
                     </color>
                  </Stop>
                  <Stop offset="1.0">
                     <color>
                        <Color />
                     </color>
                  </Stop>
               </stops>
            </LinearGradient>
         </textFill>
      </Label>
      <Label layoutX="26.0" layoutY="93.0" text="Name             :">
         <font>
            <Font name="Modern No. 20" size="15.0" />
         </font>
      </Label>
      <ComboBox fx:id="drugsNameComboBox" layoutX="125.0" layoutY="87.0" prefHeight="31.0" prefWidth="375.0" promptText="Input Drug's name" />
      <Label layoutX="25.0" layoutY="134.0" text="Price              :">
         <font>
            <Font name="Modern No. 20" size="15.0" />
         </font>
      </Label>
      <TextField fx:id="drugsPriceTextField" layoutX="125.0" layoutY="131.0" prefHeight="26.0" prefWidth="375.0">
         <font>
            <Font name="Arial" size="10.0" />
         </font>
      </TextField>
      <Label layoutX="25.0" layoutY="175.0" text="Amount:">
         <font>
            <Font name="Modern No. 20" size="15.0" />
         </font>
      </Label>
      <TextField fx:id="amountTextField" layoutX="125.0" layoutY="172.0" prefHeight="26.0" prefWidth="375.0">
         <font>
            <Font name="Arial" size="10.0" />
         </font>
      </TextField>
      <Button fx:id="loadButton" layoutX="187.0" layoutY="253.0" mnemonicParsing="false" onAction="#loadButtonOnAction" prefWidth="250.0" text="Load">
         <textFill>
            <LinearGradient endX="1.0" endY="1.0" startX="1.0" startY="0.24290218413440212">
               <stops>
                  <Stop>
                     <color>
                        <Color green="1.0" blue="0.8039215803146362" />
                     </color>
                  </Stop>
                  <Stop offset="1.0">
                     <color>
                        <Color />
                     </color>
                  </Stop>
               </stops>
            </LinearGradient>
         </textFill>
      </Button>
      <Button fx:id="backButton" layoutX="400.0" layoutY="320.0" mnemonicParsing="false" onAction="#backButtonOnAction" prefWidth="125.0" text="Back">
         <textFill>
            <LinearGradient endX="1.0" endY="1.0" startX="1.0" startY="0.24290218413440212">
               <stops>
                  <Stop>
                     <color>
                        <Color green="1.0" blue="0.8039215803146362" />
                     </color>
                  </Stop>
                  <Stop offset="1.0">
                     <color>
                        <Color />
                     </color>
                  </Stop>
               </stops>
            </LinearGradient>
         </textFill>
      </Button>
      <Button fx:id="homeButton" layoutX="407.0" layoutY="360.0" mnemonicParsing="false" onAction="#homeButtonOnAction" prefHeight="16.0" prefWidth="110.0" text="Home" />
   </children>
</AnchorPane>
