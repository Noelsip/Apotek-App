<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #194be3;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tubes11.apotekerreal.controller.DeleteDrugsController">
    <children>
      <ImageView fitHeight="400.0" fitWidth="600.0" pickOnBounds="true" smooth="false">
         <image>
            <Image url="@../../img/img_try.jpeg" />
         </image>
      </ImageView>
      <Label layoutX="225.0" layoutY="25.0" text="Drug's Data">
         <font>
            <Font name="System Bold" size="21.0" />
         </font>
         <textFill>
            <LinearGradient endX="1.0" endY="1.0" startX="1.0" startY="0.24290218413440212">
               <stops>
                  <Stop>
                     <color>
                        <Color green="1.0" blue="0.8039215803146362" />
                     </color>
                  </Stop>
                  <Stop offset="1.0">
                     <color>
                        <Color />
                     </color>
                  </Stop>
               </stops>
            </LinearGradient>
         </textFill>
      </Label>
      <Label layoutX="25.0" layoutY="75.0" text="Name             :">
         <font>
            <Font name="Modern No. 20" size="15.0" />
         </font>
      </Label>
        <ComboBox fx:id="drugsNameComboBox" layoutX="125.0" layoutY="75.0" prefHeight="20.0" prefWidth="375.0" promptText="Input Drug's name" />
      <Button fx:id="deleteDrugsButton" layoutX="163.0" layoutY="225.0" mnemonicParsing="false" prefWidth="250.0" text="Delete">
         <textFill>
            <LinearGradient endX="1.0" endY="1.0" startX="1.0" startY="0.24290218413440212">
               <stops>
                  <Stop>
                     <color>
                        <Color green="1.0" blue="0.8039215803146362" />
                     </color>
                  </Stop>
                  <Stop offset="1.0">
                     <color>
                        <Color />
                     </color>
                  </Stop>
               </stops>
            </LinearGradient>
         </textFill>
      </Button>
      <Label layoutX="25.0" layoutY="115.0" text="Amount         :">
         <font>
            <Font name="Modern No. 20" size="15.0" />
         </font>
      </Label>
        <ComboBox fx:id="drugsAmountComboBox" editable="true" layoutX="125.0" layoutY="110.0" prefHeight="20.0" prefWidth="375.0" promptText="Input Drug's Amount" />
      <Button fx:id="deleteDrugsBackButton" layoutX="400.0" layoutY="320.0" mnemonicParsing="false" prefWidth="125.0" text="Back">
         <textFill>
            <LinearGradient endX="1.0" endY="1.0" startX="1.0" startY="0.24290218413440212">
               <stops>
                  <Stop>
                     <color>
                        <Color green="1.0" blue="0.8039215803146362" />
                     </color>
                  </Stop>
                  <Stop offset="1.0">
                     <color>
                        <Color />
                     </color>
                  </Stop>
               </stops>
            </LinearGradient>
         </textFill>
      </Button>
      <Button fx:id="drugsDeleteHomeButton" layoutX="558.0" layoutY="1.0" mnemonicParsing="false" prefHeight="39.0" prefWidth="42.0" />
    </children>
</AnchorPane>
