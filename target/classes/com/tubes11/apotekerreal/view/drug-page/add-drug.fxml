      <Button fx:id="addDrugHomeButton" layoutX="300.0" layoutY="351.0" mnemonicParsing="false" onAction="#addDrugHomeButtonOnAction" prefHeight="16.0" prefWidth="108.0" text="Home" />
      <TextField fx:id="drugsNameTextField" layoutX="125.0" layoutY="104.0" onAction="#drugsNameTextFieldOnAction" prefHeight="31.0" prefWidth="375.0" promptText="input drug's name">
         <font>
            <Font name="Arial" size="10.0" />
         </font>
      </TextField>
        <Label layoutX="25.0" layoutY="112.0" text="Name             :">
            <font>
                <Font name="Modern No. 20" size="15.0" />
            </font>
